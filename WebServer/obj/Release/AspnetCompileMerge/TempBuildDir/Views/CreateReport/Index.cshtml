@model WebServer.Models.CreateViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row" ng-app="CreateApp">
    <div class="col-xs-12" ng-controller="CreateController">
        <h1 class="text-center">EZReporting Report Creator</h1>

        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <h3>Select Database</h3>
                </div>
                <div class="row">
                    <select id="slctDatabase">
                        @foreach(var database in Model.Databases) {
                            <option value="@database">@database</option>
                        }
                    </select> 
                </div>
            </div>
        </div>
        <div class="row" ng-hide="schemas.length==0;">
            <div class="col-xs-12">
                <div class="row">
                    <h3>Schema</h3>
                </div>
                <div class="row">
                    <select id="slctSchema">
                        <option ng-repeat="schema in schemas">{{schema}}</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row" ng-hide="procedures.length==0;">
            <div class="col-xs-12">
                <div class="row">
                    <h3>Select Procedure</h3>
                </div>
                <div class="row">
                    <select id="slctProc">
                        <option ng-repeat="proc in procedures">{{proc}}</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row" ng-hide="procName.length==0;">
            <div class="col-xs-12">
                <div class="row">
                    <h3 id="lblEnterReportName">Enter Report Name</h3>
                </div>
                <div class="row">
                    <input id="txtReportName" type="text" width="200" />
                    <button id="btnCreate" type="button">Create Report</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js" type="text/javascript"></script>
    <script src="~/Scripts/CreateApp.js" type="text/javascript"></script>
}

